<h3>Are you sure you want to delete this?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class="col-sm-4">
